<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juacallacastillo.projectlayout.Religious">

    <ImageView
        android:background="@drawable/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:src="@drawable/home"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView

        android:id="@+id/imageView9"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/santissimo"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnros"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:onClick="opensan"
        android:text="Santisimo Rosario "
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnbck4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="#000"
        android:onClick="openbck4"
        android:text="Back to Tour"
        android:textColor="@android:color/background_light" />

</RelativeLayout>