<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juacallacastillo.projectlayout.Research">

    <ImageView
        android:background="@drawable/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView

        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:src="@drawable/home"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true" />

    <ImageView

        android:id="@+id/imageView9"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/tarc"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btntarc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:onClick="opentarc"
        android:text="Thomas Aquinas Research Complex "
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnbck5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="#000"
        android:onClick="openbck5"
        android:text="Back to Tour"
        android:textColor="@android:color/background_light" />

</RelativeLayout>