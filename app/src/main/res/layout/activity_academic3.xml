<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juacallacastillo.projectlayout.Academic3">

    <ImageView
        android:background="@drawable/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:src="@drawable/home"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:background="@drawable/martin"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/btnmart"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageView
        android:id="@+id/raymund"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:src="@drawable/raymund"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/roque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/roque"
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:padding="0dp"
        android:src="@drawable/roque"
        android:layout_alignTop="@+id/btnroq"
        android:layout_toLeftOf="@+id/btnroq"
        android:layout_toStartOf="@+id/btnroq" />

    <Button
        android:id="@+id/btnray"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="#000"
        android:text="St. Raymund"
        android:textColor="@android:color/background_light"
        android:layout_alignTop="@+id/raymund"
        android:layout_toRightOf="@+id/raymund"
        android:layout_toEndOf="@+id/raymund" />

    <Button
        android:id="@+id/btnmart"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:text="St. Martin"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/roque"
        android:layout_alignRight="@+id/btnroq"
        android:layout_alignEnd="@+id/btnroq" />

    <Button
        android:id="@+id/btnroq"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:text="Roque Ruano"
        android:textColor="@android:color/background_light"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/raymund"
        android:layout_toEndOf="@+id/raymund" />

    <Button
        android:id="@+id/btnprev2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:background="#000"
        android:onClick="openPrev2"
        android:text="Prev"
        android:textColor="@android:color/background_light" />

</RelativeLayout>